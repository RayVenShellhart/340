<!-- content heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages()%>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

<form action="/inv/update" method="post" class="login">
    <label>Make <input type="text" name="inv_make" value="<%= locals.inv_make%>" required></label>
    <label>Model <input type="text" name="inv_model" value="<%= locals.inv_model%>" required></label>
    <label>Year<input type="number" name="inv_year" required value="<%= locals.inv_year%>"></label>
    <label>Description<textarea placeholder="Fancy and red." name="inv_description" required value="<%= locals.inv_description%>"></textarea></label>
    <label>Image<input type="text" name="inv_image" required value="<%= locals.inv_image%>"></label>
    <label>Thumbnail<input type="text" name="inv_thumbnail" required value="<%= locals.inv_thumbnail%>"></label>
    <label>Price<input type="number" name="inv_price" required value="<%= locals.inv_price%>"></label>
    <label>Miles<input type="number" name="inv_miles" required value="<%= locals.inv_miles%>"></label>
    <label>Color<input type="text" placeholder="Red" name="inv_color" required value="<%= locals.inv_color%>"></label>
    <input type="submit" name="submit" value="update vehicle">
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
</form>