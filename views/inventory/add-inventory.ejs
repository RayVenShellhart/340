<!-- content heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages()%>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

<form action="/inv/add-inventory" method="post" class="login">
    <label>Make <input type="text" name="inv_make" required></label>
    <label>Model <input type="text" name="inv_model" required></label>
    <label>Year<input type="number" name="inv_year"></label>
    <label>Description<textarea placeholder="Fancy and red." name="inv_description" required></textarea></label>
    <label>Image<input type="text" name="inv_image"Required.></label>
    <label>Thumbnail<input type="text" name="inv_thumbnail" required></label>
    <label>Price<input type="number" name="inv_price" required></label>
    <label>Miles<input type="number" name="inv_miles" required></label>
    <label>Color<input type="text" placeholder="Red" name="inv_color" required.></label>
    <input type="submit" value="add">
</form>