<!-- content heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages()%>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<form class="login" action="/inv/add-classification" method="post">
    <label>Classification Name: <input type="text" name="classification_name"></label>
    <span>Must fill out. REQUIRED! No spaces or special characters</span>
    <input type="submit" value="add">
</form>